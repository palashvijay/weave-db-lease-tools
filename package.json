{
  "name": "weave-db-lease-tools",
  "displayName": "Weave DB Lease Helper",
  "description": "A VS Code shortcut for generating bart lease commands from service configs",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "vscode": "^1.101.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/palashvijay/weave-db-lease-tools.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "weave.generateLeaseCommand",
        "title": "Weave: Generate Lease Command"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Weave Extension",
      "properties": {
        "weave.githubOrg": {
          "type": "string",
          "description": "GitHub organisation name",
          "default": "weave-lab"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "js-yaml": "^4.1.0",
    "octokit": "^5.0.3"
  }
}
